[user]
    name = lowking
    email = life@lowking.pro
    signingkey = 3192255B712CC054
[commit]
    gpgSign = true
[core]
    autocrlf = input # keep newlines as in input
[http]
    postBuffer = 5368709120
[merge]
    tool = intellij
[mergetool "intellij"]
    cmd = '/Applications/IntelliJ IDEA 2.app/Contents/MacOS/idea' merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
    trustExitCode = true
[mergetool]
    keepBackup = false
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
[merge "ours"]
    driver = true
[url "git@github.com:"]
    insteadOf = "gh:"
[url "git@gogs.mynetgear.com:"]
    insteadOf = "gs:"
[init]
	defaultBranch = main
[filter "gitignore"]
	clean = "sed '/ \\/\\/#gitignore$/d'"
	smudge = cat
