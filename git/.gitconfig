[user]
    name = lowking
    email = life@lowking.pro
    signingkey = 3192255B712CC054
[commit]
    gpgSign = true
[core]
    autocrlf = input # keep newlines as in input
[http]
    postBuffer = 5368709120
[merge]
    tool = intellij
[mergetool "intellij"]
    cmd = '/Applications/IntelliJ IDEA 2.app/Contents/MacOS/idea' merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"
    trustExitCode = true
[mergetool]
    keepBackup = false
[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
[merge "ours"]
    driver = true
[url "git@github.com:"]
    insteadOf = "gh:"
[url "git@gogs.mynetgear.com:"]
    insteadOf = "gs:"
[init]
	defaultBranch = main
[filter "gitignore"]
	clean = "sed '/ \\/\\/#gitignore$/d'"
	smudge = cat
[aliases]
  # Simplified from https://gist.github.com/gnarf/5406589
  pr  = "!f() { git fetch -fu ${2:-$(git remote |grep ^upstream || echo origin)} refs/pull/$1/head:pr/$1 }; f"
  pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"
