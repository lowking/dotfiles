#!/usr/bin/env bash

# 定时抢永辉券 >2025-11-21 18:59:59 500
gdate '+%Y-%m-%d %H:%M:%S.%3N'

# 从剪辑版复制文本存入cookie文件, 然后执行斗鱼自动送礼
douyuCookieFile=/Users/lowking/douyu-gift/config/cookie.txt
pbContent=$(pbpaste)
dyDid="dy_did"
if [[ $pbContent =~ $dyDid ]]; then
    echo $pbContent > "$douyuCookieFile"
