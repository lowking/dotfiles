else
    echo "⚠️ 错误的cookie, 请确认"
fi

# noip renew
source ~/.zshrc
ssh docker "
docker run --rm --env NO_IP_USERNAME=$NO_IP_USERNAME --env NO_IP_PASSWORD=$NO_IP_PASSWORD --env NO_IP_TOTP_KEY=$NO_IP_TOTP_KEY simaofsilva/noip-renewer:latest
"

# 视频移到plex并给予权限
scp $dl/temp/*.mp4 root@plex:/mnt/media/games
ssh plex "chown -R plex:plex \"/mnt/media/games/\""

# plex hd list
ssh plex "
ls -alh /mnt/media/hd
"

# 触发监控的fswatch, 传输监控画面
dir=/home/ispy/media/video/c6cn/grabs
ssh lksony "
ps -ef|grep -i fswatch |grep -Ev \"grep|log\"
echo $pwdStr |sudo -S -u ispy bash << EOSU
whoami
cd $dir
ls $dir -t |grep jpg |grep -v test |head -n 1 |xargs -i echo \"cp $dir/{} $dir/test.jpg && sleep 4 && rm $dir/test.jpg\" |bash
tail -n 3 ../../fswatch.log
EOSU
"

# ispy重启fswatch
ssh lksony "
echo $pwdStr|sudo -S bash << EOSU
whoami
systemctl restart fs
EOSU
"

